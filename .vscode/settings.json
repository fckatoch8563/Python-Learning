{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.envFile": "${workspaceFolder}/.env",
    "editor.fontSize": 18,
    "editor.codeLensFontSize": 18,
    "editor.inlayHints.fontSize": 18,
    "workbench.panel.defaultLocation": "bottom",
    "editor.minimap.enabled": false,
    "files.autoSave": "onFocusChange",
    // Use Jedi language server - no Pylance
    "python.languageServer": "Jedi",
    "python.terminal.activateEnvironment": true,
    "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "python": "/Users/fckatoch/projects/Environments/.venv/bin/python -u"
    },
    "code-runner.saveFileBeforeRun": true,
    "terminal.integrated.env.osx": {
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
    },
    "terminal.integrated.profiles.osx": {
        "zsh (login)": {
            "path": "/bin/zsh",
            "args": [
                "-l"
            ]
        },
        "zsh": {
            "path": "/bin/zsh"
        }
    },
    "terminal.integrated.defaultProfile.osx": "zsh (login)",
    // Turn off type checking and inline hints
    "python.analysis.typeCheckingMode": "off",
    "editor.inlayHints.enabled": "off",
    "python.REPL.enableREPLSmartSend": false
}